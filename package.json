{
  "name": "@cortex-bank/statement",
  "scripts": {
    "start": "webpack serve --port 3004",
    "start:standalone": "webpack serve --port 3004 --env standalone",
    "clean:ports": "node src/scripts/clean-ports.js",
    "start:mock": "npm run clean:ports && concurrently \"npm run mock:server\" \"npm run start:standalone\"",
    "start:backend": "cross-env API_BASE_URL=http://localhost:8080 npm run start:standalone",
    "mock:server": "node src/mock/test-server.js",
    "mock:generate": "node src/mock/generate-transactions.js",
    "mock:validate": "node src/mock/validate-data.js",
    "build": "concurrently npm:build:*",
    "build:webpack": "webpack --mode=production",
    "analyze": "webpack --mode=production --env analyze",
    "lint": "eslint src --ext js,ts,tsx --cache --cache-location .eslintcache",
    "lint:fix": "eslint src --ext js,ts,tsx --fix --cache --cache-location .eslintcache",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "prepare": "husky install",
    "coverage": "vitest run --coverage",
    "build:types": "tsc"
  },
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@babel/eslint-parser": "^7.23.3",
    "@babel/plugin-transform-runtime": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@babel/runtime": "^7.23.3",
    "@testing-library/dom": "^10.3.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-ts-react-important-stuff": "^3.0.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^7.0.2",
    "jsdom": "^23.0.1",
    "json-server": "^0.17.4",
    "lint-staged": "^13.2.3",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "ts-config-single-spa": "^3.0.0",
    "typescript": "^4.3.5",
    "vite": "^7.3.1",
    "vitest": "^4.0.16",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-config-single-spa-react-ts": "^8.0.0",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@grupo10-pos-fiap/design-system": "^1.0.9",
    "@tanstack/react-query": "^5.90.16",
    "@tanstack/react-query-devtools": "^5.91.2",
    "@tanstack/react-virtual": "^3.13.13",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "@types/systemjs": "^6.1.1",
    "@types/webpack-env": "^1.16.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-intersection-observer": "^10.0.0",
    "single-spa": "^5.9.3",
    "single-spa-react": "^6.0.2",
    "use-debounce": "^10.0.6"
  },
  "types": "dist/cortex-bank-statement.d.ts"
}
